{% extends 'base.html.twig' %}

{% block title %}Création d'un port{% endblock %}
{% block body %}
  <div class="container" style="padding-top: 10px;">
    {{ form_start(form)}}
    <div class="form-row">
      <div class="form-group col-md-6"" id="some-custom-id">
        {{ form_label(form.indicatif, 'Indicatif') }}
        {{ form_widget(form.indicatif, { 'attr' :{'class': "form-control"}}) }}
      </div>
      <div class="form-group col-md-6" id="some-custom-id">
        {{ form_label(form.nom, 'Nom du Port') }}
        {{ form_widget(form.nom, {'attr': {'placeholder': 'Saisir le nom du port', 'class': "form-control"}}) }}
      </div>
    </div>
    <div class="form-row">
      <div class="col-4" id="some-custom-id">
        {{ form_label(form.lePays, 'Pays') }}
        {{ form_widget(form.lePays, {'attr': {'class': "form-control"}}) }}
      </div>
      <div class="col-4 form-row" id="some-custom-id">
        {{ form_label(form.lesTypes, 'Types de navires acceptés', {'attr': {'class': 'col-form-label'}}) }}
        {{ form_widget(form.lesTypes, {'attr': {'class': 'form-check-label'}}) }}
      </div>
    </div>
    <button type="submit" class="btn btn-success">Créer</button>
  </div>
  {{ form_end(form) }}
{% endblock %}
