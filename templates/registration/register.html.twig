{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
  {% for flashError in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
  {% endfor %}
  <div class="container">
    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
    <div class="container">
      <div class="form-row">
        <div class="form-group col-md-6"" id="some-custom-id">
          {{ form_label(registrationForm.email, 'Email') }}
          {{ form_widget(registrationForm.email, { 'attr' :{'class': "form-control"}}) }}
        </div>
        <div class="form-group col-md-6"" id="some-custom-id">
          {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
          {{ form_widget(registrationForm.plainPassword, { 'attr' :{'class': "form-control"}}) }}
        </div>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_label(registrationForm.agreeTerms, 'Accepter les termes') }}
        {{ form_row(registrationForm.agreeTerms) }}
        

        <button type="submit" class="btn">S'incrire</button>
        {{ form_end(registrationForm) }}
      {% endblock %}
